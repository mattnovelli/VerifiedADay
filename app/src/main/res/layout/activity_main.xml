<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/newPersonButton"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:background="#1DCAFF"
        android:text="give me a new person"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/customText"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <Button
        android:id="@+id/tweetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#1DCAFF"
        android:text="tweet"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/customText"
        app:layout_constraintTop_toBottomOf="@+id/customText" />

    <EditText
        android:id="@+id/customText"
        android:layout_width="262dp"
        android:layout_height="111dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="your tweet here..."
        android:imeOptions="actionDone|flagNoEnterAction"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/userHandle"
        android:layout_width="210dp"
        android:layout_height="21dp"
        android:text="@exampleHandle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/customText"
        app:layout_constraintStart_toStartOf="@+id/customText" />

    <TextView
        android:id="@+id/realName"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:text="Example Twitter"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        app:layout_constraintTop_toTopOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/userFollowers"
        android:layout_width="170dp"
        android:layout_height="17dp"
        android:layout_marginTop="4dp"
        android:text="212K followers"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/realName"
        app:layout_constraintTop_toBottomOf="@+id/realName" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="19dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/realName"
        app:layout_constraintStart_toEndOf="@+id/realName"
        app:layout_constraintTop_toTopOf="@+id/realName"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/verifiedbadge" />

</androidx.constraintlayout.widget.ConstraintLayout>